<body>

    <div class="header">
        <h1>Epinephrine Code - Logistics Solver</h1>
    </div>

    <div class="content">
        <div class="marquee">
            <span>Welcome to Epinephrine Logistics Solver</span>
        </div>

        <div class="pdf-upload">
            <input type="file" id="pdfFile" accept=".pdf">
            <label for="pdfFile">Upload Profiles</label>
        </div>

        <div class="question-area">
            <label for="question">Enter Job Description:</label><br>
            <textarea id="question" rows="4" placeholder="The AI will provide the best trucker for the job..."></textarea><br>
            <button onclick="getAIResponse()">Get Response</button>
        </div>

        <div class="response-area" id="response"></div>
    </div>

    <script>
        alert("#Epinephrine_Code");
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.header');
            if (window.scrollY > 0) {
                header.classList.add('fade-out');
            } else {
                header.classList.remove('fade-out');
            }
        });

        function getAIResponse() {
            const question = document.getElementById('question').value;
            const responseDiv = document.getElementById('response');
            const pdfFile = document.getElementById('pdfFile').files[0];

            if (!pdfFile) {
                responseDiv.textContent = "Please upload a PDF first.";
                return;
            }

            responseDiv.textContent = "Thinking... (This is a placeholder for the AI response)";
            setTimeout(() => {
                const mockResponse = `AI Response to: ${question} (From ${pdfFile.name})`;
                responseDiv.textContent = mockResponse;
            }, 2000);
        }
    </script>
